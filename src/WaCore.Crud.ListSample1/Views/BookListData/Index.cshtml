@model WaCore.Crud.ListSample1.ViewModels.BookListVm
@{
    ViewData["Title"] = "Books";
}

<h2>View all books</h2>

<form>
    <fieldset class="form-inline">
        <div class="well well-sm">
            <div class="form-group">
                @Html.LabelFor(m => m.Filter.Author)
                @Html.TextBoxFor(m => m.Filter.Author, new { @class = "form-control" })
            </div>

            <button type="submit" class="btn btn-default">Search</button>
        </div>
    </fieldset>
</form>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Id</th>
            <th>Author</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.DtoList)
            {
            <tr>
                <td class="col-md-1">@book.Id</td>
                <td class="col-md-6">@book.Author</td>
                <td class="col-md-5">@book.Title</td>
            </tr>
        }
    </tbody>
</table>